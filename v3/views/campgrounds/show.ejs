<% include  ../partials/header.ejs%>
<div class="container my-4">
    <div class="row ">
        <div class="col-md-3">
            <h3 class="display-4">YelpCamp</h3>
              <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item ">Info 2</li>
                <li class="list-group-item ">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="text-center">
                <img  src="<%= camps.image %>" class="img-thumbnail img-fluid " alt="This is <%= camps.name%>">
            </div>
            
            <div class="caption-full">
                <h4 class="text-right">$9.0/night</h4>
                <h4><a href=""><%= camps.name %></a></h4>
                <p><%= camps.description%></p>
            </div>
            <div class="">
                <div class=" ">
                    <p class=""><a href="/campgrounds/<%= camps._id%>/comments/new" class="btn btn-outline-success ">Add Comment</a></p>
                </div>
            </div>
            <% camps.comments.forEach(function(comment){ %>
                <div class="row card">
                    <div class="col-md-12 card-body">
                        <strong class="card-title"><%= comment.author %></strong>
                        <!-- <span class="justify-content-right">10 days ago</span> -->
                        <p class="card-body">
                            <%= comment.text %> 
                        </p>
                    </div>
                </div>
            <% }) %>
        
        </div>
    </div>
            
</div>




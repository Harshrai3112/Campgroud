<% include ../partials/header.ejs %>
<h1 class="text-center display-4 text-secondary my-4">Add Comment to <%= camp.name%></h1>
<div class="container">
    
        <form action="/campgrounds/<%= camp._id%>/comments " class="my-5" method="POST" >
            <div class="d-flex justify-content-center">
                    <div class="form-group  " style="width:30%;">
                            <textarea class="form-control "  name="comment[text]" placeholder="Comment"></textarea>
                    </div>
            </div>
            <div class="d-flex justify-content-center">
                    <div class="form-group row " style="width:30%;">
                        <input  class="form-control"    type="text" name="comment[author]" placeholder="Author">
                    </div>
            </div>
            
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary " style="width:30%;" type="submit"> Add Comment</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>
</div>
</div>

<br>

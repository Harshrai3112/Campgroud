<% include partials/header.ejs%>
<div class="container">
    <div class="jumbotron">
        <h1 >Welcome to YelpCamp!</h1>
        <p>This are the places where you can enjoy with your friends</p>
        <a href="/campgrounds/new" class="btn btn-primary">Add campgrounds</a>
    </div>
    <div class="row">
            <% camps.forEach((camp)=>{%>
              <div class="col-lg-4 col-md-6">
                    <img class ="rounded-circle img-thumbnail" src="<%= camp.image %>">
                    <p class="text-center"><%=camp.name%></p>
              </div>
            <%})%>
            
    </div>
   
    <% include partials/footer.ejs %>
</div>